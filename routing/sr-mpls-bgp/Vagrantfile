                  :libvirt__tunnel_port => "10001",
                  :libvirt__iface_name => "vgif_e2_3",
                  auto_config: false
  end
  config.vm.define "x1" do |x1|
    x1.vm.provider :libvirt do |domain|
      domain.management_network_mac = "08-4F-A9-00-00-05"
    end
    x1.vm.box = "cisco/iosv"
    x1.vm.synced_folder ".", "/vagrant", disabled: true
    x1.ssh.insert_key = false
    x1.vm.boot_timeout = 180
    x1.vm.guest = :freebsd

    x1.vm.provider :libvirt do |domain|
      domain.nic_adapter_count = 8
      domain.memory = 512
      domain.cpus = 1
      domain.driver = "kvm"
      domain.nic_model_type = "e1000"
    end
    x1.vm.network :private_network,
                  :libvirt__tunnel_type => "udp",
                  :libvirt__tunnel_local_ip => "127.1.5.1",
                  :libvirt__tunnel_local_port => "10001",
                  :libvirt__tunnel_ip => "127.1.3.4",
                  :libvirt__tunnel_port => "10004",
                  :libvirt__iface_name => "vgif_x1_1",
                  auto_config: false
    x1.vm.network :private_network,
                  :libvirt__network_name => "sr-mpls-bgp_7",
                  :libvirt__forward_mode => "veryisolated",
                  :libvirt__dhcp_enabled => false,
                  :libvirt__iface_name => "vgif_x1_2",
                  :auto_config => false
  end
  config.vm.define "x2" do |x2|
    x2.vm.provider :libvirt do |domain|
      domain.management_network_mac = "08-4F-A9-00-00-06"
    end
    x2.vm.box = "cisco/iosv"
